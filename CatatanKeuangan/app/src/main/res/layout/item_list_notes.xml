<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_margin"
    android:clipToPadding="true"
    android:orientation="horizontal"
    tools:padding="@dimen/size_padding">

    <android.support.v7.widget.CardView
        android:id="@+id/item_list_typecome_card"
        android:layout_width="@dimen/size_image_typecome"
        android:layout_height="@dimen/size_image_typecome"
        android:layout_gravity="center_vertical|start"
        android:layout_margin="@dimen/size_margin"
        app:cardCornerRadius="@dimen/size_image_typecome_half">

        <ImageView
            android:id="@+id/item_list_typecome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_margin"
            android:contentDescription="@string/content_description_type_come" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_list_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="@dimen/size_text_input_md"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_list_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:textSize="@dimen/size_text_input_sm" />

        </LinearLayout>

        <TextView
            android:id="@+id/item_list_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLength="@integer/max_text_description"
            android:textSize="@dimen/size_text_input_smd"
            android:textStyle="italic" />

    </LinearLayout>

</LinearLayout>
