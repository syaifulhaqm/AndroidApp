<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:padding="@dimen/size_padding">


    <ImageView
        android:id="@+id/item_list_typecome"
        android:layout_width="@dimen/size_width_image_sm"
        android:layout_height="match_parent"
        android:contentDescription="@string/content_description_type_come" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_list_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="@dimen/size_text_input_md" />

        <TextView
            android:id="@+id/item_list_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:layout_editor_absoluteX="304dp"
            tools:layout_editor_absoluteY="29dp" />
    </LinearLayout>

</LinearLayout>
